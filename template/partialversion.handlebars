<div class="form-group">
    <label for="bvProvider">Bible provider</label>
    <select class="form-control" id="bvProvider">
		{{#each choices}}
			<option {{selected}}>{{provider}}</option>
		{{/each}}
    </select>
</div>
<div class="form-group">
	<label for="bvVersion">Bible version code</label>
	<input id="bvVersion" class="form-control" type="text" value="{{version}}" />
</div>
